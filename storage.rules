rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper to check if user owns the file
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User uploads (profile pictures, documents, etc.)
    match /users/{userId}/{allPaths=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
    
    // Public assets
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only admin can upload public assets
    }
    
    // Protected content
    match /protected/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}